<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    <ImageView
        android:id="@+id/img_cart_product"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_cart_product_name"
            android:text="Coca-Cola"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
    android:id="@+id/txt_count"
    android:layout_alignParentRight="true"
    android:layout_width="50dp"
    android:layout_height="30dp"
    app:initialNumber="1"
    app:finalNumber="100"
    app:backGroundColor="@color/colorAccent"/>


            
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //Tamaño

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Escoja Tamaño"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="REQUERIDO"
                    android:padding="4dp"
                    android:background="@drawable/text_round_gray"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

         <RelativeLayout
             android:background="@android:color/white"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <RadioGroup
                 android:orientation="vertical"

                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <RadioButton
                     android:id="@+id/rdi_sizeS"
                     android:text="Tamaño S"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <RadioButton
                     android:id="@+id/rdi_sizeM"
                     android:text="Tamaño M"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <RadioButton
                     android:id="@+id/rdi_sizeL"
                     android:text="Tamaño L"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

             </RadioGroup>

       <LinearLayout
           android:orientation="vertical"
           android:layout_alignParentRight="true"
           android:layout_marginRight="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:text="+Bs.0"
               android:textSize="18sp"
               android:layout_marginTop="4dp"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:text="+Bs.7"
               android:textSize="18sp"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:text="+Bs.11"
               android:textSize="18sp"
               android:layout_marginBottom="4dp"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />




       </LinearLayout>

         </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>